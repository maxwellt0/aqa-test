{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "lib": ["es2015", "dom"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@core/*": [
        "./core/*"
      ],
      "@api/*": [
        "./tests/api/*"
      ],
      "@ui/*": [
        "./tests/ui/*"
      ]
    }
  },
  
  "include": ["core", "tests"]
}
